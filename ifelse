#include <iostream>
#include <string>
using namespace std;

int main()
{
    string name;
    cout << "What is your name?? :000" << endl;
    cin >> name;
    if (name == "Daniel") {
        cout << "Congrats!!! You are the cutest boyfriend in the world!!!" << endl;
    }
    else if (name == "Christine") {
        cout << "You are the second cutest significant other in the world!!" << endl;
    }
    else {
        cout << "My condolences... you are not dating either Christine nor Daniel QQ 4 U" << endl; }
}
